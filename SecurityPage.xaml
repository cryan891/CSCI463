<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SecurityPage"
             Title="Security">
    <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="20">
        <!-- Cameras Button -->
        <Button Text="Cameras"
                FontSize="18"
                Grid.Row="0"
                Clicked="CamerasButtonClicked" />

        <!-- Alarm Button -->
        <Button x:Name="AlarmButton"
                Text="Alarm: On"
                FontSize="18"
                BackgroundColor="Green"
                TextColor="White"
                Grid.Row="1"
                Clicked="AlarmButtonClicked" />
    </Grid>
</ContentPage>